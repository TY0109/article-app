<h1 class="text-center"><%= t(".create_articles") %></h1>
<div class="row">
  <div class="col-md-6 offset-3">
    <%= form_with(model: @article, url: users_articles_path, local: true) do |f| %>
      <%= render  'shared/error_messages', object: f.object %>  
      <%= f.label:title , class: "label-form" %>
      <%= f.text_field:title, class: "form-control" %>
      
      <%= f.label :content, class: "label-form" %>
      <%= f.text_area :content, rows:5, class: "form-control" %>

      <%= f.label :img %> 
      <%= f.file_field :img, id: :article_img %> 

      <div class="btn-article">
        <%= f.submit t(".create"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
